<mx:Canvas xmlns:fx="http://ns.adobe.com/mxml/2009"
		   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:s="library://ns.adobe.com/flex/spark"
		   implements="actionScripts.ui.IContentWindow"
		   label="Samples" backgroundColor="0x444444"
		   width="100%" height="100%"
		   creationComplete="onSamplesScreenCreationComplete(event)" horizontalScrollPolicy="off"
		   verticalScrollPolicy="off">
	<fx:Script><![CDATA[
		import mx.collections.ArrayList;
		import mx.events.FlexEvent;

		[Bindable]
		public var samples:ArrayList;

		public function get longLabel():String
		{
			return "Samples";
		}

		public function isChanged():Boolean
		{
			return false;
		}

		public function isEmpty():Boolean
		{
			return true;
		}

		public function save():void
		{
		}

		private function onSamplesScreenCreationComplete(event:FlexEvent):void
		{

		}
		]]></fx:Script>

	<s:DataGroup id="samplesList" itemRenderer="components.views.project.ExpandItemRenderer" width="{this.width}"
			     dataProvider="{samples}">
		<s:layout>
			<s:VerticalLayout gap="1" horizontalAlign="left" verticalAlign="top"/>
		</s:layout>
	</s:DataGroup>
</mx:Canvas>