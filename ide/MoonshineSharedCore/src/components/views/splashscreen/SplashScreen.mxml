<mx:Canvas xmlns:fx="http://ns.adobe.com/mxml/2009"
		   xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:s="library://ns.adobe.com/flex/spark"
		   xmlns:project="components.views.project.*"
		   implements="actionScripts.ui.IContentWindow"
		   label="Home" backgroundColor="0x444444"
		   width="100%" height="100%"
		   creationComplete="onSplashScreenCreationComplete(event)" horizontalScrollPolicy="off"
		   verticalScrollPolicy="off">
	
	<fx:Script>
		<![CDATA[
		import actionScripts.plugin.splashscreen.NewProjectScreenPlugin;
		import actionScripts.plugin.splashscreen.SplashScreenPlugin;

			import mx.events.FlexEvent;

			[Embed(source="/elements/images/overview.png")]
			[Bindable]
			protected var overview:Class;

			[Embed(source="/elements/images/samples.png")]
			[Bindable]
			protected var samples:Class;

			[Embed(source="/elements/images/newproject.png")]
			[Bindable]
			protected var newproject:Class;

			[Bindable]
			public var plugin:SplashScreenPlugin;

			public function get longLabel():String
			{
				return "Home";
			}

			public function isChanged():Boolean
			{
				return false;
			}

			public function isEmpty():Boolean
			{
				return true;
			}

			public function save():void
			{
			}

			private function onSplashScreenCreationComplete(event:FlexEvent):void
			{

			}

			private function onVerviewScreen(event:MouseEvent):void
			{

			}

			private function onNewProjectScreen(event:MouseEvent):void
			{
				plugin.dispatchEvent(new Event(NewProjectScreenPlugin.EVENT_SHOW_NEWPROJECT_SCREEN));
			}

			private function onSamplesScreen(event:MouseEvent):void
			{

			}
		]]>
	</fx:Script>
	<s:Group>
		<s:layout>
			<s:TileLayout columnWidth="300" horizontalGap="15" verticalGap="5"
						  requestedColumnCount="2" requestedRowCount="3"
					      padding="15"/>
		</s:layout>
		<project:SplashScreenItem image="{overview}" label="Overview"
								  click="onVerviewScreen(event)"/>
		<project:SplashScreenItem image="{newproject}" label="Create new project"
								  click="onNewProjectScreen(event)"/>
		<project:SplashScreenItem image="{samples}" label="Samples"
								  click="onSamplesScreen(event)"/>
	</s:Group>
</mx:Canvas>